{
  "manifest_version": 2,
  "minimum_chrome_version": "22",

  "name": "Performance Exporter",
  "description": "This extension exports performance information.",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"]
    },

  "content_scripts": [{
      "matches": ["*://*/*"],
      "js": ["timer.js"]
  }],
  
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png"
       },

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage"
  ]
}